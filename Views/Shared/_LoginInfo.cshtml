@inject Microsoft.AspNetCore.Identity.SignInManager<AppilicationUser> _signInManager

@if (_signInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Hello @(User.FindFirst("UserFirstName").Value+ " " + User.FindFirst("UserLastName").Value)
            @*Hello @User.Identity.Name*@
        </a>
        <div class="dropdown-menu" area-labelledby="navbarDropdown">
            <a class="dropdown-item btn-outline-primary" asp-action="Logout" asp-controller="Account">Logout</a>
            <a class="dropdown-item btn-outline-primary" asp-action="ChangePassword" asp-controller="Account">Change Password</a>
        </div>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Path">Login</a>
        <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Signup">Register</a>
    </li>
}

